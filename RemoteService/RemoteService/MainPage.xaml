<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteService.MainPage">

    <StackLayout Orientation="Vertical" Padding="20">

        <Button Text="Bind service"
                Clicked="BindService"
                VerticalOptions="End"
                HeightRequest="80"
                CornerRadius="5"/>

        <Button Text="Request location"
                Clicked="RequestLocation"
                VerticalOptions="End"
                HeightRequest="80"
                CornerRadius="5"/>

        <Button Text="Unbind service"
                Clicked="UnbindService"
                VerticalOptions="End"
                HeightRequest="80"
                CornerRadius="5"/>

        <Button Text="Stop service"
                Clicked="StopService"
                VerticalOptions="End"
                HeightRequest="80"
                CornerRadius="5"/>

        <Button Text="Send Test Alert"
                Clicked="SendAlert"
                VerticalOptions="End"
                HeightRequest="80"
                CornerRadius="5"/>

    </StackLayout>
</ContentPage>
